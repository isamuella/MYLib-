{
  "name": "mylib",
  "version": "1.0.0",
  "description": "Digital library application for children in orphanages in Goma, DRC",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon index.js",
    "client": "cd client && npm run dev",
    "build:server": "cd server && npm install --production",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "seed": "node server/scripts/seed.js",
    "start": "cd server && node index.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": ["library", "education", "dr-congo", "digital-library", "mental-health", "entrepreneurship"],
  "author": "Ineza Samuella - African Leadership University",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mylib-project"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}

